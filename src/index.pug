    section.works
      .container
        .works__inner.row
          h2.works__title.title.col-12.col-sm-6 Our works
          div.works__link.col-12.col-sm-6
            a(href='#dribble') projects in dribble
      ul.works__list.row
        - for (let i = 0; i < 12; i++)
            li.works__list-item.col-6.col-sm-4.col-md-3.col-lg-2
